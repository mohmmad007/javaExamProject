<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/fontsfree_net_ir_sans"
    android:columnCount="1"
    android:rowCount="3"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/examComplte"
        android:text="آزمون  های انجام شده "
        android:textColor="@color/white"
        android:background="@drawable/acset"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/fontsfree_net_ir_sans"

        android:textSize="25sp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:fontFamily="@font/fontsfree_net_ir_sans"
        android:layout_height="80dp"
        android:text="تغییر حساب کاربری"
        android:background="@drawable/acset"
        android:id="@+id/acedit"
        android:padding="12dp"
        android:textColor="@color/white"

        android:layout_margin="10dp"
        android:textSize="25sp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="80dp"
        android:text="حذف حساب کاربری"
        android:fontFamily="@font/fontsfree_net_ir_sans"

        android:layout_margin="10dp"
        android:background="@drawable/acset"
        android:id="@+id/acdel"
        android:padding="10dp"
        android:textSize="25sp"
        android:gravity="center"/>

    <!-- ادامه دارای همین فرمت برای سلول‌های بعدی -->

</GridLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="نام آزمون"
        android:background="@drawable/input_view"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:id="@+id/exampleName"
        android:textColorHint="@color/white"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="right"
        android:id="@+id/EREname"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="0dp"
        android:textColor="#FF0000"
        android:textSize="20dp"


        />
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تاریخ شروع مثلا:1403/1/1  "
        android:layout_margin="20dp"

        android:background="@drawable/input_view"
        android:padding="10dp"
        android:inputType="date"
        android:id="@+id/startDate"
        android:textColorHint="@color/white"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تاریخ پایان مثلا:1403/2/1"
        android:inputType="date"
        android:layout_margin="20dp"
        android:background="@drawable/input_view"
        android:padding="10dp"
        android:id="@+id/expireDate"
        android:textColorHint="@color/white"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="زمان آزمون به دقیقه:مثلا 100"
        android:layout_margin="20dp"
        android:background="@drawable/input_view"
        android:inputType="number"
        android:maxLength="3"
        android:padding="10dp"
        android:id="@+id/examTime"
        android:textColorHint="@color/white"

        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تعداد سوالات"
        android:layout_margin="20dp"
        android:inputType="number"
        android:maxLength="3"
        android:background="@drawable/input_view"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:id="@+id/numQ"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ساخت آزمون"
        android:background="@drawable/round_textview_background"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:id="@+id/NextDataButton"

        />
</LinearLayout>
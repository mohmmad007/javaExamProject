<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<HorizontalScrollView
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"

    android:id="@+id/nameScroler"
    >
</HorizontalScrollView>
    <LinearLayout
        android:layout_marginVertical="40dp"
        android:layout_below="@id/nameScroler"
        android:id="@+id/navBarItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="right"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="درصد پاسخ دهی"
            android:textSize="16sp"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پاسخ غلط"
            android:textSize="17sp"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پاسخ صحیح"
            android:textSize="17sp"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام"
            android:textSize="20sp"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رتبه"
            android:textSize="20sp"
            android:padding="10dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/nameScroler"

        android:layout_marginTop="90dp"
        android:id="@+id/recycler_Rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_forward_ios_24"
        android:id="@+id/btnForwardRank"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:id="@+id/btnBackRank"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="16dp" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

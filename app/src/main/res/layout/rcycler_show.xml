<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shaper_show_history"
        android:padding="15dp"
        android:layout_margin="20dp"
>

        <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemHistoryNameExam"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-21dp"
        android:paddingVertical="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:text="نام ازمون"
        android:textSize="30sp"
        android:gravity="right"
        tools:ignore="RtlHardcoded" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_error_outline_24"
            android:layout_toLeftOf="@+id/itemHistoryNameExam"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="40dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="-41dp"
            android:padding="20dp"

            android:id="@+id/vecHistoryDetailExam"
            android:textSize="20sp"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="21dp"
            android:padding="20dp"
            android:text="آزمون مجدد"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/item_detail_exam"
            android:id="@+id/ReExam"
            />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_below="@+id/itemHistoryNameExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-21dp"
        android:padding="20dp"
        android:text="10"
        android:id="@+id/itemHistoryAllExam"
        android:textSize="20sp"
        android:gravity="right"
        tools:ignore="RtlHardcoded" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_question_mark_24"

            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_marginHorizontal="45dp"
            android:layout_marginVertical="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-21dp"
            android:padding="20dp"

            android:id="@+id/vecHistoryAllExam"
            android:textSize="20sp"
            android:gravity="right"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemHistoryTQ"
            android:layout_toLeftOf="@+id/itemHistoryAllExam"
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="15dp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:layout_marginRight="-21dp"
            android:padding="20dp"
            android:text="10"
            android:textSize="20sp"
            android:gravity="right"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_check_24"
            android:layout_toLeftOf="@+id/itemHistoryTQ"
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_marginVertical="30dp"
            android:layout_marginRight="-21dp"
            android:padding="20dp"

            android:id="@+id/vecHistoryTQ"

            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itemHistoryFQ"
            android:layout_toLeftOf="@+id/itemHistoryTQ"
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginVertical="15dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="20dp"
            android:text="10"
            android:textSize="20sp"
            android:gravity="right"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_close_24"
            android:layout_toLeftOf="@+id/itemHistoryFQ"
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_marginVertical="30dp"
            android:layout_marginRight="-21dp"
            android:padding="20dp"
            android:id="@+id/vecHistoryFQ"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_toLeftOf="@+id/itemHistoryFQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:layout_marginVertical="15dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:text="10"
            android:id="@+id/itemHistoryTimeExam"
            android:textSize="20sp"
            android:gravity="right"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_access_time_24"
            android:layout_toLeftOf="@+id/itemHistoryTimeExam"
            android:layout_below="@+id/itemHistoryNameExam"
            android:layout_marginVertical="35dp"
            android:layout_marginRight="-15dp"
            android:padding="20dp"
            android:id="@+id/vecHistoryTimeExam"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>


</RelativeLayout>